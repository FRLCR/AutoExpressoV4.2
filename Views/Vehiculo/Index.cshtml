@model IEnumerable<AEFINAL.Models.Vehiculo>

@{
    ViewData["Title"] = "Index";
}

<h1>Vehiculos Registrados</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Nuevo Vehiculo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Matricula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                Documento Cliente             
            </th>
            <th>
                Nombre Cliente
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Matricula)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientedocumentoNavigation.Documento)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientedocumentoNavigation.NombreCompleto)
                </td>
            <td>
                    <a class ="btn btn-primary" asp-action="Edit" asp-route-id="@item.Matricula">Editar</a> |
                    <a class="btn btn-secondary"  asp-action="Details" asp-route-id="@item.Matricula">Detalles</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Matricula">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
