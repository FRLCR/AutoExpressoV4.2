@model AEFINAL.Models.Registro

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar registro</h1>

<h4>Registro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NroOrden" />
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehiculomatricula" class="control-label"></label>
                <select asp-for="Vehiculomatricula" class="form-control" asp-items="ViewBag.Vehiculomatricula"></select>
                <span asp-validation-for="Vehiculomatricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Servicioid" class="control-label"></label>
                <select asp-for="Servicioid" class="form-control" asp-items="ViewBag.Servicioid"></select>
                <span asp-validation-for="Servicioid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
